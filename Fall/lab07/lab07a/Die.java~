public class Die 
{
   // properties
   private int faceValue;
   
   // constructors
   public Die()
   {
      faceValue = 0;
   }
   
   // methods
   public int roll()
   {
      faceValue = ( (int) ( Math.random() * 6 ) + 1 );
      return faceValue;
   }
   
   public int getFaceValue()
   {
      return faceValue;
   }
   
   public String toString()
   {
      return "Value is: " + faceValue;
   }
}